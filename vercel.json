{
  "functions": {
    "app/api/analyze/route.ts": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/product-analyser",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}

